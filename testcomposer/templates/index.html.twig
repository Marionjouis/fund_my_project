{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="assets/css/homepage.css">
{% endblock %}


{% block title %} Ma super page {% endblock %}


{% block content %}
    {{ parent() }}

    <h1>Hello {{ name|upper }}</h1>
    <ul>
        {% for language in languages  %}
            <li>{{ language }}
                {% if loop.first %}
                    FIRST
                {% elseif loop.last %}
                    LAST
                {% endif %}
            </li>
        {% endfor %}

    </ul>
{% endblock %}
